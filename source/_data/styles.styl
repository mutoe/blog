// Custom styles.

html
  font-size 100%

// 让表格列宽度根据内容自适应
table
  table-layout auto

#footer
  margin-top 56px
  border-top 1px solid #eee


.external-link
  margin 28px

  > a
    margin 0 .5em

// 代码块 header
figure.highlight
  .copy-btn
    background-color transparent

  figcaption
    border-bottom 1px dashed var(--highlight-gutter-foreground)
    font-family consolas, Menlo, "PingFang SC", "Microsoft YaHei", monospace
    font-size 14px
    transition color .4s
    color var(--blockquote-color)

  &:hover
    figcaption
      color var(--link-hover-color)


.post-body
  // 锚点
  h1, h2, h3, h4, h5, h6
    > a.headerlink
      position: relative
      border-bottom none
      float none
      opacity 1
      margin-left: 0
      font-size inherit
      display block
      color inherit

      &::before
        content '#'
        position absolute
        right 100%
        padding-right 0.2em
        transition opacity .2s
        font-family inherit
        opacity 0

      &:hover::before
        opacity 1

  // 边距
  h1
    margin-top 96px
  h2, h3, h4, h5, h6
    margin-top 48px

  // 文字对齐方式（不要两边对齐）
  p
    text-align left

// 列表样式
.posts-expand
  .post-meta
    .post-description
      margin-top 48px
      padding 24px
      background #eee
      text-align left

  .post-body ul
    li
      list-style unset

    > li
      list-style circle

      > ul > li
        list-style square

      > ol > li
        list-style lower-roman

  .post-title
    position: relative
    overflow hidden

    .post-edit-link
      position: absolute
      right: 0
      height 100%
      display inline-flex
      align-items: center
      font-size 0.8em

// stackblitz 代码在线演示
.stackblitz
  width 100%
  height auto
  min-height 400px
  max-height 800px

// details
details
  summary
    cursor zoom-in

    &::marker
    &::-webkit-details-marker
      display none
      content: ''

    &::before
      display inline-block
      content '▶'
      margin-right 4px
      color #999
      transition transform .2s

  &[open]
    summary
      cursor zoom-out

      &::before
        transform rotateZ(90deg)

// 注音
ruby
  rt
    font-size 70%
    color #ccc

blockquote
  position relative
  padding 21px 15px 1px
  background-color var(--card-bg-color)
  margin-bottom 20px

  p
    color #999

// 标签云
.tag-cloud-tags
  margin-top 24px

  a
    text-decoration none
    border-bottom none
    vertical-align middle

// 阅读进度栏
.reading-progress-bar
  background-color transparent
  width: 100%
  transition width .4s

  &::before
    content ''
    display block
    width var(--progress)
    height 100%
    background-color var(--theme-color)

@media (min-width: 1200px)
  .sidebar-active
    .reading-progress-bar
      width: calc(100% - 320px)
